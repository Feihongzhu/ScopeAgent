{
  "name": "scope-ai-agent",
  "displayName": "SCOPE AI Agent",
  "description": "A comprehensive AI Agent system for Microsoft SCOPE script performance optimization with Think-Plan-Execute architecture and intelligent tool calling.",
  "version": "1.0.0",
  "icon": "img/logo.jpg",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Data Science",
    "Other"
  ],
  "activationEvents": [],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "scope-ai-agent",
        "name": "agent",
        "description": "An intelligent AI agent for SCOPE script performance optimization with autonomous analysis and recommendation capabilities"
      }
    ],
    "commands": [
      {
        "command": "scope-ai-agent.demo.fullCycle",
        "title": "Demonstrate Full Agent Cycle",
        "category": "SCOPE AI Agent"
      },
      {
        "command": "scope-ai-agent.demo.intentRecognition",
        "title": "Demonstrate Intent Recognition",
        "category": "SCOPE AI Agent"
      },
      {
        "command": "scope-ai-agent.demo.toolSystem",
        "title": "Demonstrate Tool System",
        "category": "SCOPE AI Agent"
      },
      {
        "command": "scope-ai-agent.demo.learning",
        "title": "Demonstrate Learning Capability",
        "category": "SCOPE AI Agent"
      },
      {
        "command": "scope-ai-agent.info.architecture",
        "title": "Show Agent Architecture Info",
        "category": "SCOPE AI Agent"
      },
      {
        "command": "scope-ai-agent.info.capabilities",
        "title": "Show Agent Capabilities",
        "category": "SCOPE AI Agent"
      },
      {
        "command": "scope-ai-agent.info.tools",
        "title": "Show Available Tools",
        "category": "SCOPE AI Agent"
      },
      {
        "command": "scope-opt-agent.analyzeScript",
        "title": "Analyze SCOPE Script",
        "category": "SCOPE AI Agent"
      }
    ]
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.97.0",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.34",
    "zod": "^3.22.4"
  }
}
